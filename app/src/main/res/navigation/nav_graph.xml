<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/HomeFragment">

    <fragment
        android:id="@+id/HomeFragment"
        android:name="com.attendance.qrcode.activity.fragment.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_HomeFragment_to_MyInfoFragment"
            app:destination="@id/MyInfoFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_HomeFragment_to_ScanQRFragment"
            app:destination="@id/ScanQRFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/action_HomeFragment_to_AttendanceListFragment"
            app:destination="@id/AttendanceListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/MyInfoFragment"
        android:name="com.attendance.qrcode.activity.fragment.MyInfoFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_my_info">

    </fragment>

    <fragment
        android:id="@+id/ScanQRFragment"
        android:name="com.attendance.qrcode.activity.fragment.ScanQRFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_scan_qr">

    </fragment>

    <fragment
        android:id="@+id/AttendanceListFragment"
        android:name="com.attendance.qrcode.activity.fragment.AttendanceListFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_attendance_list">

    </fragment>
</navigation>